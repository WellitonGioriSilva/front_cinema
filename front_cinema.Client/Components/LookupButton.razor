<MudButton Color="Color.Primary" OnClick="@OpenLookupDialog">
    Buscar Cliente
</MudButton>

<MudText Typo="Typo.h6">@SelectedCliente?.Nome</MudText>

@code {
    public class Cliente
        {
            public int Id { get; set; }
            public string Nome { get; set; }
            public string Email { get; set; }
        }
    Cliente SelectedCliente;

    private async Task OpenLookupDialog()
    {
        var parameters = new DialogParameters();
        var options = new DialogOptions() { MaxWidth = MaxWidth.Medium, FullWidth = true };

        var dialog = DialogService.Show<ClienteLookupDialog>("Selecionar Cliente", parameters, options);
        var result = await dialog.Result;

        //if (!result.Cancelled)
        //{
            SelectedCliente = (Cliente)result.Data;
        //}
    }

    [Inject] IDialogService DialogService { get; set; }
}
